<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">


    <!-- Ajouter la vue personnalisée -->
    <com.example.finalexam.CustomView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:contentDescription="Message de bienvenue" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bonjour, FinalExamApp!"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />


    <Button
        android:id="@+id/toastButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Afficher un Toast" />

    <Button
        android:id="@+id/snackbarButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Afficher un Snackbar"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/notificationButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Afficher une Notification"
        android:layout_marginTop="16dp" />

    <!-- Un autre élément comme un titre -->
    <TextView
        android:id="@+id/headerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Liste des éléments"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="8dp" />

    <!-- RecyclerView avec une hauteur fixe -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginBottom="16dp" />

    <!-- Un autre bouton ou section en bas -->
    <Button
        android:id="@+id/actionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Action"
        android:layout_gravity="center" />

</LinearLayout>




